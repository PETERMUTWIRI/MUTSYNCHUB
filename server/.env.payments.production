# M-Pesa Production Configuration
# Update these values with actual credentials when received

# Security & Encryption (Use strong production values)
PAYMENT_ENCRYPTION_KEY=
JWT_SECRET=

# M-Pesa API Configuration
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASSKEY=
MPESA_SHORTCODE=
MPESA_ENVIRONMENT=production

# Replace with actual production URLs
MPESA_CALLBACK_URL=https://api.yourdomain.com/payments/mpesa/callback
MPESA_VALIDATION_URL=https://api.yourdomain.com/payments/mpesa/validate
MPESA_CONFIRMATION_URL=https://api.yourdomain.com/payments/mpesa/confirm

# Retry Configuration
MAX_PAYMENT_RETRIES=3
PAYMENT_RETRY_DELAY=5000

# Monitoring Configuration
ENABLE_PAYMENT_MONITORING=true
STALE_PAYMENT_TIMEOUT_MINUTES=15
DAILY_RECONCILIATION_TIME=00:00

# Logging Configuration
LOG_LEVEL=info
PAYMENT_LOG_FILE=/var/log/mutsynchub/payments.log
